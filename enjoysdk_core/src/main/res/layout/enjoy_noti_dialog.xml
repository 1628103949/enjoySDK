<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/enjoy_update_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/limit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏时间达上线，您已被游戏防沉迷限制！"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/btn_switch"
                android:text="退出账号"
                android:textColor="#B03B3A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/bt_line"
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/exit_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/btn_exit"
                android:text="结束游戏"
                android:textColor="#B88730"
                android:textSize="16sp"
                android:paddingRight="-13dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>